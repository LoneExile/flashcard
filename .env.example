# Flashcard App Environment Configuration
# Copy this file to .env and configure your values

# ===========================================
# REQUIRED SETTINGS
# ===========================================

# PostgreSQL password (change this!)
POSTGRES_PASSWORD=your_secure_password_here

# Secret key for JWT tokens (generate a secure random string)
# You can generate one with: openssl rand -hex 32
SECRET_KEY=your_secret_key_change_in_production

# ===========================================
# ADMIN USER (Optional)
# ===========================================
# Set these to create an admin user on first startup
# Leave empty to skip admin creation

ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=your_admin_password

# ===========================================
# REGISTRATION SETTINGS
# ===========================================

# Enable/disable public user registration (true/false)
REGISTRATION_ENABLED=true

# ===========================================
# OAUTH SETTINGS (Optional)
# ===========================================

# Enable OAuth authentication (true/false)
OAUTH_ENABLED=false

# GitHub OAuth
# Create app at: https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Google OAuth
# Create app at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ===========================================
# URLS
# ===========================================

# Frontend URL (for OAuth redirects)
FRONTEND_URL=http://localhost:3100

# ===========================================
# SECURITY
# ===========================================

# Use secure cookies (set to true in production with HTTPS)
SECURE_COOKIES=false
